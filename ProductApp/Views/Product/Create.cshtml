@model ProductApp.Models.Product

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <title>Create Products</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <h2>Create Product</h2>
    <main>
        
        <a class="btn-back" href="/Product">Back To List</a>
        <form method="post">
            <fieldset>
                <label> Product Name
                    <input asp-for="Name" type="text" id="name" placeholder="Enter product name" required>
                </label>
            </fieldset>
            <fieldset>
                <label>
                    Price
                    <input asp-for="Price" type="number" id="price" placeholder="Enter product price" required>
                </label>
            </fieldset>
            <fieldset>
                <label>
                    Description
                    <textarea asp-for="Description" id="description" type="text" placeholder="Enter product description"></textarea>
                </label>
            </fieldset>
            <button id="btn-save" type="submit" >Save</button>
        </form>
    </main>
    <script src="~/js/script.js"></script>
</body>
</html>
